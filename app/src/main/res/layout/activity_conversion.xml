<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333333">

    <!-- Toolbar -->
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0D0000"
        android:orientation="horizontal"
        android:padding="16dp">

        <TextView
            android:id="@+id/app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Switch-IT"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/connection" />
    </LinearLayout>

    <!-- Selected Images Preview (Example) -->
    <TextView
        android:id="@+id/selected_images_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Selected Images"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/connection" />

    <!-- Conversion Options -->
    <TextView
        android:id="@+id/format_options_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_images_label"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Choose Format"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:fontFamily="@font/connection" />

    <!-- Example Buttons for format options -->
    <Button
        android:id="@+id/btn_convert_to_png"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/format_options_label"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="Convert to PNG"
        android:textColor="#FFFFFF"
        android:textAllCaps="true" />

    <Button
        android:id="@+id/btn_convert_to_pdf"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_convert_to_png"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/rounded_button"
        android:text="Convert to PDF"
        android:textColor="#FFFFFF"
        android:textAllCaps="true" />

</RelativeLayout>
